@page
@model TesteConhecimentos.Pages.Fornecedor.Index

<div class="container-fluid d-flex flex-row-reverse mb-3">
    <a asp-page="Create" class="btn btn-primary">Novo Fornecedor</a>
</div>
@if (Model.Fornecedores.Any())
{
    <table class="table">
        <thead>
        <tr>
            <th>Nome</th>
            <th>CNPJ</th>
            <th>Especialidade</th>
            <th>CEP</th>
            <th>Endereço</th>
            <th>Ação</th>
        </tr>
        </thead>
        <tbody>
        @foreach (Models.Fornecedor fornecedor in Model.Fornecedores)
        {
            <tr>
                <td>@fornecedor.Nome</td>
                <td>@fornecedor.Cnpj</td>
                <td>@fornecedor.Especialidade</td>
                <td>@fornecedor.Cep</td>
                <td>@fornecedor.Endereco</td>
                <td>
                    <a href="Fornecedor/Edit/@fornecedor.Id" class="btn btn-secondary">Editar</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <p>Nenhum fornecedor registrado ainda</p>
}

@if (!ModelState.IsValid)
{
    @if (ModelState.ContainsKey("DatabaseError"))
    {
        <div class="text-danger">
            <p>Houve erros ao adicionar registros no banco de dados.</p>
            <ul>
                @foreach (var error in ModelState["DatabaseError"].Errors)
                {
                    <pre>@error.ErrorMessage</pre>
                }
            </ul>
        </div>
    }
}